{
  "name": "Open-New-Tab-After-Current-Tab",
  "version": "0.0.10",
  "description": "Opens new tab after the active tab, instead of last position.",
  "homepage": "https://github.com/Narno/Open-New-Tab-After-Current-Tab",
  "author": "Arnaud Ligny",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Narno/Open-New-Tab-After-Current-Tab.git"
  },
  "bugs": {
    "url": "https://github.com/Narno/Open-New-Tab-After-Current-Tab/issues"
  },
  "main": "gulpfile.js",
  "scripts": {
    "test": "xo",
    "build": "node_modules/.bin/gulp dist",
    "release:cws": "cd build && webstore upload --auto-publish",
    "release:amo": "cd build && webext submit",
    "release": "npm run build && npm run release:cws && npm run release:amo"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "del": "^3.0.0",
    "fancy-log": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.9.4",
    "gulp-cleanhtml": "^1.0.3",
    "gulp-cli": "^2.0.1",
    "gulp-crx-pack": "^1.0.2",
    "gulp-zip": "^4.2.0",
    "jshint": "^2.9.6",
    "vinyl-paths": "^2.1.0",
    "webext": "^1.9.1-with-submit.1",
    "xo": "^0.21.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "no-lonely-if": "off"
    },
    "ignores": [
      "build/**"
    ]
  }
}
